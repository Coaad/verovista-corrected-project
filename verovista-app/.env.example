# Flask specific
FLASK_SECRET_KEY='YOUR_SUPER_SECRET_KEY_HERE'  # IMPORTANT: Change this! Generate one (e.g., python -c 'import secrets; print(secrets.token_hex(24))')
FLASK_DEBUG=True  # Set to False for production
FLASK_ENV=development  # Set to production for deployment

# Google OAuth Credentials (Get from Google Cloud Console)
# Ensure Authorized redirect URI includes: http://127.0.0.1:5000/login/authorized (for local dev)
GOOGLE_CLIENT_ID='YOUR_GOOGLE_CLIENT_ID_HERE'
GOOGLE_CLIENT_SECRET='YOUR_GOOGLE_CLIENT_SECRET_HERE'

# Security Settings (Optional)
SESSION_COOKIE_SECURE=False  # Set to True for HTTPS in production
SESSION_TIMEOUT=3600  # Session timeout in seconds (1 hour)

# Logging (Optional)
LOG_LEVEL=INFO
